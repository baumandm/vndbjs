{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "source": {
    "include": ["readme.md", "src/"]
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "useLongnameInNav": false,
    "default": {
      "includesDate": false
    }
  },
  "opts": {
    "destination": "./public/",
    "encoding": "utf8",
    "private": true,
    "recurse": true,
    "tutorials": "./guides",
    "template": "./node_modules/docdash",
    "docdash": {
      "static": false,
      "sort": true
    }
  },
  "plugins": ["plugins/markdown"],
  "markdown": {
    "hardwrap": true
  }
}
